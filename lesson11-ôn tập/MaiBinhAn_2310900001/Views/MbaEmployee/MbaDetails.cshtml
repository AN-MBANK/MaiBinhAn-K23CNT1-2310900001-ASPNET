@model MaiBinhAn_2310900001.Models.MbaEmployee

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h2 class="text-center">Thông tin chi tiết nhân viên</h2>
            </div>

            <div class="card-body">
                <div class="form-group my-3">
                    <label>Mã nhân viên:</label>
                    <p>@Model.MbaEmpId</p>
                </div>

                <div class="form-group my-3">
                    <label>Tên nhân viên:</label>
                    <p>@Model.MbaEmpName</p>
                </div>

                <div class="form-group my-3">
                    <label>Cấp bậc:</label>
                    <p>@Model.MbaEmpLevel</p>
                </div>

                <div class="form-group my-3">
                    <label>Ngày bắt đầu:</label>
                    <p>@Model.MbaEmpStartDate.ToString("dd/MM/yyyy")</p>
                </div>

                <div class="form-group my-3">
                    <label>Trạng thái:</label>
                    <p>@(Model.MbaEmpStatus ? "Đang làm" : "Nghỉ việc")</p>
                </div>
            </div>

            <div class="card-footer text-center">
                <a asp-action="MbaEdit" asp-route-Mbaid="@Model.MbaEmpId" class="btn btn-warning me-2">Chỉnh sửa</a>
                <a asp-action="MbaIndex" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
