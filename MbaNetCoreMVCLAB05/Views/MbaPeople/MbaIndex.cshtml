@model IEnumerable<MbaNetCoreMVCLAB05.Models.MbaPeople>

@{
    ViewData["Title"] = "MbaIndex";
}

<h1>MbaIndex</h1>

<p>
    <a asp-action="MbaCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MbaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MbaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MbaEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MbaPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MbaAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MbaAvatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MbaBirthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MbaGender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MbaID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MbaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MbaEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MbaPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MbaAddress)
                </td>
                <td>
                    <img src="@item.MbaAvatar" alt="@item.MbaName" style="width:4rem" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MbaBirthday)
                </td>
                <td>
                    @if (item.MbaGender == 0)
                    {
                        <span>Nam</span>
                    }
                    else if (item.MbaGender == 1)
                    {
                        <span>Nữ</span>
                    }
                    else
                    {
                        <span>Khác</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "MbaEdit", new { id = item.MbaID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "MbaDetails", new { id = item.MbaID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete", "MbaDelete", new { id = item.MbaID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
